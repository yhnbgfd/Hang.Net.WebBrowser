<Window x:Class="Keyboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Keyboard"
        xmlns:UserControls="clr-namespace:Keyboard.Views.UserControls"
        mc:Ignorable="d"
        Title="KeyBoardWindow" Height="50" Width="200" ResizeMode="NoResize" Topmost="True" Background="{x:Null}" AllowsTransparency="True" WindowStyle="None" Focusable="False">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Keyboard;component/Themes/ButtonDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Button x:Name="Button_KeyBoard" Click="Button_KeyBoard_Click" BorderThickness="0" Style="{StaticResource ButtonStyle1}" Focusable="False"/>
        <Viewbox Margin="1,3">
            <TextBlock x:Name="TextBlock_Content" Text="屏幕键盘" IsHitTestVisible="False" Foreground="White" />
        </Viewbox>
        <Popup x:Name="Popup_KeyBoard" Placement="Left">
            <Grid Width="1000" Height="360" Background="#FFBFBFBF">
                <UserControls:KeyBoard Margin="10" />
            </Grid>
        </Popup>
    </Grid>
</Window>
